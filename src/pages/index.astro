---
import Layout from '../layouts/Layout.astro';
---

<Layout title="PeopleFlow - Moderne HR-Lösungen">
	<main>
		<section id="hero" class="bg-background min-h-screen flex flex-col">
			<header class="w-full">
				<nav class="bg-white shadow-md fixed w-full z-50">
					<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
						<div class="flex justify-between h-16">
							<div class="flex">
								<div class="flex-shrink-0 flex items-center">
									<img class="h-8 w-auto" src="/logo.svg" alt="PeopleFlow" />
								</div>
							</div>
							<div class="hidden md:ml-6 md:flex md:items-center md:space-x-8">
								<a href="#features" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Features</a>
								<a href="#about" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Über uns</a>
								<a href="#testimonials" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Erfahrungen</a>
								<a href="#contact" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Kontakt</a>
								<a href="#demo" class="bg-primary text-white hover:bg-opacity-90 px-4 py-2 rounded-md text-sm font-medium ml-2">Demo anfragen</a>
							</div>
							<div class="flex items-center md:hidden">
								<button id="mobile-menu-button" type="button" class="text-contrast hover:text-primary inline-flex items-center justify-center p-2 rounded-md focus:outline-none">
									<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
									</svg>
								</button>
							</div>
						</div>
					</div>

					<!-- Mobile menu, show/hide based on menu state -->
					<div id="mobile-menu" class="fixed top-0 right-0 w-full max-w-xs h-full bg-white shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out md:hidden">
						<div class="px-2 pt-2 pb-3 h-full flex flex-col">
							<div class="flex items-center justify-between p-4 border-b">
								<div class="text-lg font-medium text-contrast">Menü</div>
								<button id="close-menu-button" class="text-contrast hover:text-primary">
									<svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
									</svg>
								</button>
							</div>
							<div class="flex flex-col space-y-2 mt-4 px-4">
								<a href="#features" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Features</a>
								<a href="#about" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Über uns</a>
								<a href="#testimonials" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Erfahrungen</a>
								<a href="#contact" class="text-text hover:text-primary px-3 py-2 text-sm font-medium">Kontakt</a>
								<a href="#demo" class="bg-primary text-white hover:bg-opacity-90 mt-4 px-4 py-2 rounded-md text-sm font-medium text-center">Demo anfragen</a>
							</div>
						</div>
					</div>
				</nav>
			</header>

			<!-- Hero Section -->
			<div class="flex-grow flex items-center px-4 py-24 md:py-32">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="md:flex md:items-center md:justify-between">
						<div class="md:w-1/2 mb-10 md:mb-0">
							<h1 class="text-4xl font-bold text-contrast sm:text-5xl md:text-6xl mb-6">
								<span class="block">Moderne HR-Lösungen</span>
